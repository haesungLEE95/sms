<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="smsqnareplyns">
	<!-- Use type aliases to avoid typing the full classname every time. -->
	<resultMap id="smsqnareplyResult" type="smsqnareply">
		<result property="qna_rep" 		column="qna_rep" /> <!-- 댓글번호 -->
		<result property="qna_no" 		column="qna_no" />	<!-- 문의글번호 -->
		<result property="qna_re_cont"  column="qna_re_cont" />
		<result property="mem_no" 		column="mem_no" />
		<result property="regdate" 		column="regdate" />
		<result property="updatedate" 	column="updatedate" />
		<result property="del" 			column="del" />
	</resultMap>
	<select id="list" parameterType="int" resultMap="smsqnareplyResult">
		select * from SMS_qna_reply where qna_no=#{qna_no} order by qna_rep
	</select>
	<insert id="insert" parameterType="smsqnareply">
		<selectKey keyProperty="qna_rep" order="BEFORE" resultType="int">
			select nvl(max(qna_rep),0)+1 from SMS_qna_reply
		</selectKey>
		insert into SMS_qna_reply values(#{qna_rep},#{qna_no},
			#{qna_re_cont},#{mem_no},sysdate,sysdate,'n')
	</insert>
	<update id="delete" parameterType="int">
		update SMS_qna_reply set del = 'y' where qna_rep=#{qna_rep} 
	</update>
	<update id="update" parameterType="smsqnareply">
		update SMS_qna_reply set qna_re_cont=#{qna_re_cont}, regdate=sysdate,updatedate=sysdate where qna_rep=#{qna_rep}
	</update>
</mapper>