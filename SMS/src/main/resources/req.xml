<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="smsreqns">
	<resultMap id="smsreqResult" 	type="smsreq">
		<result property="mem_no" 		column="mem_no" />
		<result property="rq_no" 	column="rq_no" />
		<result property="mcate_no" 	column="mcate_no" />
		<result property="scate_no" 	column="scate_no" />
		<result property="rq_title" 	column="rq_title" />
		<result property="rq_cont" column="rq_cont" />
		<result property="rq_date" 	column="rq_date" />
		<result property="rq_price" 		column="rq_price" />
		<result property="rq_cond" 	column="rq_cond" />
		<result property="rq_count" 	column="rq_count" />
	</resultMap>
	
	<select id="getTotal" parameterType="smsreq" resultType="int">
		select count(*) from sms_request
	</select>
	
	<select id="list" parameterType="smsreq" resultMap="smsreqResult">
		select * from (select a.*, rowNum rn from (
			select * from sms_request 		
			order by rq_no desc) a) 
				where rn between #{startRow} and #{endRow}
	</select>
	<insert id="insert" parameterType="smsreq">
		<selectKey keyProperty="rq_no" order="BEFORE" resultType="int">
			select nvl(max(rq_no),0) + 1 from sms_request
		</selectKey>
		insert into sms_request values (#{mem_no},#{rq_no},#{mcate_no},#{scate_no},
			#{rq_title},#{rq_cont},sysdate,#{rq_price},0,0)
	</insert>
	
	<update id="updateReadcount" parameterType="int">
		update sms_request set rq_count=rq_count+1 where rq_no=#{num}
	</update>
	
	<update id="updateCondition" parameterType="int">
		update sms_request set rq_cond=rq_cond+1 where rq_no=#{num}
	</update>
	
	<select id="select" parameterType="int" resultType="smsreq">
		select * from sms_request where rq_no=#{num}
	</select>
	
	<update id="update" parameterType="smsreq">
		update sms_request set rq_title=#{rq_title}, rq_cont=#{rq_cont}, rq_date=sysdate,
			rq_price=#{rq_price} where rq_no=#{rq_no}
	</update>
	<delete id="delete" parameterType="int">
		delete from sms_request where rq_no=#{num}
	</delete>
</mapper>


