<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="smsqnans">
	<!-- Use type aliases to avoid typing the full classname every time. -->
	<resultMap id="smsqnaResult" type="smsqna">
		<result property="sb_no" column="sb_no" />
		<result property="mem_no" column="mem_no" />
		<result property="qna_cont" column="qna_cont" />
		<result property="qna_date" column="qna_date" />
		<result property="sms_qna" column="sms_qna" />
		<result property="qna_no" column="qna_no" />
	</resultMap>
	<select id="getTotal" parameterType="smsqna" resultType="int">
		select
		count(*) from sms_qna
	</select>
	<select id="list" parameterType="smsqna"
		resultMap="smsqnaResult">
		select * from (select a.*, rowNum rn from (
		select * from sms_qna
		order by qna_no desc) a)
		where rn between #{startRow} and #{endRow}
	</select>
	<insert id="insert" parameterType="smsqna">
		<selectKey keyProperty="qna_no" order="BEFORE" resultType="int">
			select nvl(max(qna_no), 0)+1 from sms_qna
		</selectKey>
		insert into Sms_qna values (#{sb_no}, #{mem_no}, #{qna_cont}, sysdate, #{sms_qna}, #{qna_no})
	</insert>
	<select id="select" parameterType="int" resultType="smsqna">
		select * from Sms_qna where qna_no=#{num}
	</select>
